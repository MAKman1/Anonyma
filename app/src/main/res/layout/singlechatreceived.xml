<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/message_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="100dp">

        <TextView
            android:id="@+id/chat_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chatreceived"
            android:padding="15dp"
            android:text="An essay is, generally, a piece of writing that gives the author's own argument â€” but the definition is vague, overlapping with those of a paper, an article, a pamphlet, and a short story. Essays have traditionally been sub-classified as formal and informal."
            android:textColor="#ecebeb"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-80dp"
        android:layout_toRightOf="@id/message_container"
        android:text="12:30 PM"
        android:textColor="#99070e"
        android:textSize="12sp"
        android:textStyle="italic"
        android:visibility="invisible" />
</RelativeLayout>
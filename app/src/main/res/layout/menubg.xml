<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menubg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#b6000000"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/logoAnchor"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/logotext" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/newpostbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundnewpostbutton"
            android:drawableStart="@drawable/ic_add_circle_black_24dp"
            android:paddingStart="20dp"
            android:text="NEW SECRET       "
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/menuCircle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roundwhite">

        <Button
            android:id="@+id/closeMenu"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/down" />
    </RelativeLayout>
</RelativeLayout>